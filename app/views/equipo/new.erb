<% form_for(@equipo, "/equipo/create/#{@torneo.id}", :class => "form-horizontal") do |f| %> 

  <fieldset>
  <legend>Registrar nuevo equipo</legend>
    
    <%= partial 'equipo/form', :locals => { :f => f } %>
    
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Crear", :class => "btn btn-primary" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-10">
        <%= link_to 'Ver equipos', url_for(:equipo, :equipos, :torneo => @torneo.id), :class => "btn btn-primary" %>
      </div>
    </div>

  </fieldset>
<% end %>