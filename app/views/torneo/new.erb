<% form_for(@torneo, '/torneo/create', :class => "form-horizontal") do |f| %> 

  <fieldset>
  <legend>Registrar nuevo torneo</legend>
    <div class="form-group">
      <%= f.label :nombre, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :nombre, :class => "col-lg-10 form-control", :required => "require" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :fecha, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :fecha, :class => "col-lg-10 form-control", :required => "require" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :lugar, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :lugar, :class => "col-lg-10 form-control", :required => "require" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :comentario, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area :comentario, :class => "col-lg-10 form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Crear", :class => "btn btn-primary" %>
      </div>
    </div>
    
  </fieldset>
<% end %>